@model Auth.Models.Test

@{
    ViewBag.Title = "All";
   
}

<h2>TESTS</h2>
<table class="table table-dark">
    <tr>
        <th>name</th>
        <th>author</th>
        <th>status</th>
        <th>actions</th>
    </tr>
    @foreach (Auth.Models.Test item in ViewBag.tests )
    {
        var style = item.password != null ? "bg-danger" : "";
        <tr class="@style">
            <td>@item.name</td>
            <td>@item.User.name  @item.User.surname</td>
            <td>
                @if(item.password != null)
                {
                    <p>SECRET</p>
                }
                else
                {
                    <p>FREE</p>
                }
            </td>
            <td>
                <a href="/Test/pass/@item.id" id="hrefid">PASS TEST </a>
               
            </td>

        </tr>
    }
</table>


